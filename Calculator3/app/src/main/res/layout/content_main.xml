<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/title_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Bilangan 1"
                android:textColor="@android:color/black"
                android:padding="16dp"
                android:textSize="6pt"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center" android:layout_width="wrap_content"/>
            <TextView
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Bilangan 2"
                android:textColor="@android:color/black"
                android:padding="16dp"
                android:textSize="6pt"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center" android:layout_width="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <EditText
                android:id="@+id/number1"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:layout_weight="0.5" android:layout_width="wrap_content"/>
            <EditText
                android:id="@+id/number2"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:layout_weight="0.5" android:layout_width="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <Button
                android:id="@+id/btnTambah"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="+"
                android:layout_margin="3dp" android:layout_width="wrap_content">
            </Button>
            <Button
                android:id="@+id/btnKurang"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="-"
                android:layout_margin="3dp" android:layout_width="wrap_content">
            </Button>
            <Button
                android:id="@+id/btnKali"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="Ã—"
                android:layout_margin="3dp" android:layout_width="wrap_content">
            </Button>
            <Button
                android:id="@+id/btnBagi"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text=":"
                android:layout_margin="3dp" android:layout_width="wrap_content">
            </Button>
        </LinearLayout>

        <TextView
            android:id="@+id/txtViewHasil"
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textSize="12pt"
            android:gravity="center_horizontal">
        </TextView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>